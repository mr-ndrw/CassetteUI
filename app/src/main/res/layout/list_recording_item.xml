<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout_recording"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dense_two_line_list_item_height"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:gravity="center"
    swipe:leftEdgeSwipeOffset="line_list_item_left_right_padding"
    swipe:rightEdgeSwipeOffset="line_list_item_left_right_padding">
    <!-- Bottom View Start-->
    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="@dimen/line_list_item_text_left_padding"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/swipe_button_delete_recording"
            android:layout_width="@dimen/line_list_item_text_left_padding"
            android:layout_height="match_parent"
            android:background="@color/divider"
            android:gravity="center"
            android:src="@drawable/ic_delete_24dp" />
    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <RelativeLayout
        android:id="@+id/list_view_recording_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/line_list_item_left_right_padding">


        <RelativeLayout
            android:id="@+id/rl_titular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/titular_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/line_list_item_left_right_padding">

                <TableRow>
                    <TextView
                        android:id="@+id/list_view_recording_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recording"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/font_large" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/list_view_recording_recorded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:15 15th December 2015"
                        android:textAlignment="textStart" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/list_view_recording_duration_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:21"
                android:textSize="@dimen/font_larger"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


        <TextView
            android:id="@+id/list_view_recording_current_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_titular"
            android:layout_marginLeft="@dimen/line_list_item_left_right_padding"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:text="00:00"
            android:textAlignment="textEnd"
            android:textSize="@dimen/font_larger"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_playback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_view_recording_current_progress"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/play_stop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/line_list_item_icon_left_padding"
                android:background="@drawable/ic_play_arrow_black_24dp" />

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/play_stop_button" />
        </RelativeLayout>

        <TextView
            android:id="@+id/list_view_recording_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/rl_titular"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:text="-02:21"
            android:textAlignment="textEnd"
            android:textSize="@dimen/font_larger"
            android:visibility="gone" />


        <!--<TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TableRow>
            <TableRow>
                <TextView />
            </TableRow>

        </TableLayout>-->


    </RelativeLayout>
    <!-- Surface View End -->
</com.daimajia.swipe.SwipeLayout>